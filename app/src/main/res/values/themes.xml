<resources>
    <!-- Base application theme. -->
    <style name="Theme.AdminObr" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <item name="colorSecondary">@color/colorGreen</item>
        <item name="colorSecondaryVariant">@color/colorGray</item>
        <item name="colorOnSecondary">@color/colorWhite</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Agrega esta línea -->
        <item name="android:datePickerDialogTheme">@style/DatePickerDialogTheme</item>
    </style>

    <style name="Theme.AdminObr.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AdminObr.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AdminObr.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Estilo para el ProgressBar -->
    <style name="TransparentProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/circular_progress_bar</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Define el tema para el DatePickerDialog -->
    <style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Cambia el color de acento -->
        <item name="android:headerBackground">@color/colorPrimary</item>
        <!-- Cambia el color del encabezado -->
        <!-- Puedes agregar más atributos para personalizar la apariencia -->
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item> <!-- Fondo transparente -->
        <item name="android:background">@android:color/transparent</item> <!-- Elimina el subrayado -->
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@android:color/darker_gray</item> <!-- Color del hint -->

    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>